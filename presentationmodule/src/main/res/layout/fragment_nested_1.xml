<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:presentationmodule="http://schemas.android.com/tools"
    xmlns:library="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        presentationmodule:layout_constraintTop_toTopOf="parent"
        presentationmodule:layout_constraintBottom_toBottomOf="parent"
        presentationmodule:layout_constraintStart_toStartOf="parent"
        presentationmodule:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nested_fragment_1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            presentationmodule:layout_constraintTop_toTopOf="parent"
            presentationmodule:layout_constraintStart_toStartOf="parent"
            presentationmodule:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/counterView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            library:layout_constraintTop_toBottomOf="@id/titleText"
            android:text="0"
            android:textSize="18sp"
            library:layout_constraintStart_toStartOf="parent"
            library:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/counterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            presentationmodule:layout_constraintTop_toBottomOf="@id/counterView"
            android:text="Increase count"
            presentationmodule:layout_constraintStart_toStartOf="parent"
            presentationmodule:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/navigateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            presentationmodule:layout_constraintTop_toBottomOf="@id/counterButton"
            android:text="Navigate to Nested Fragment 2"
            presentationmodule:layout_constraintStart_toStartOf="parent"
            presentationmodule:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>